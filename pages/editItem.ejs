    <div class="container mt-5">
        <div class="card shadow-lg p-4" style="max-width: 600px; margin: auto; background-color: #c4c1c1; border-radius: 1rem;">
            <div class="card-header text-center py-4" style="background-color: #F8C000;">
                <h2 class="text-white">Edit Portfolio Item</h2>
            </div>
            <div class="card-body" style="background-color: #b8b8b8;">
                
                <div id="message" class="mb-3"></div>

              
                <div class="mb-3">
                    <label for="itemSelect" class="form-label text-white">Select Item Title to Edit</label>
                    <select id="itemSelect" class="form-select form-control-lg" style="background-color: #333333; color: white; border: 1px solid #F8C000;">
                        <option selected disabled>Select a portfolio item</option>
                     
                    </select>
                </div>

              
                <form id="editPortfolioForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label text-white">Title</label>
                        <input type="text" id="title" name="title" class="form-control form-control-lg" style="background-color: #333333; color: white; border: 1px solid #F8C000;" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label text-white">Description</label>
                        <textarea id="description" name="description" class="form-control form-control-lg" rows="4" style="background-color: #333333; color: white; border: 1px solid #F8C000;" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="images" class="form-label text-white">Images</label>
                        <input type="file" id="images" name="images" class="form-control form-control-lg" style="background-color: #333333; color: white; border: 1px solid #F8C000;" accept="image/*" multiple>
                    </div>
                    <div id="imagePreview" class="d-flex flex-wrap mb-3">
                         
                    </div>
                    <button type="submit" class="btn" style="background-color: #F8C000; color: black; width: 100%; padding: 10px;">Update Portfolio Item</button>
                </form>
            </div>
        </div>
    </div>
    <footer class="text-center py-3" style="background-color: #333; color: white; position: fixed; bottom: 0; width: 100%;">
        <p>Spandiyarov Nurkanat BDA-2304</p>
    </footer>
     
