<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Performance Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light border-bottom border-body" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand px-5" href="/home">Portfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown px-5">
                        <a class="nav-link dropdown-toggle" href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Management</a>
                        <ul class="dropdown-menu" aria-labelledby="managementDropdown">
                            <li><a class="dropdown-item" href="/create">Create</a></li>
                            <li><a class="dropdown-item" href="/delete">Delete</a></li>
                            <li><a class="dropdown-item" href="/edit">Edit</a></li>
                        </ul>
                    </li>
                    <li class="nav-item px-5"><a class="nav-link" href="/enable">Enable 2FA</a></li>
                    <li class="nav-item px-5"><a class="nav-link" href="/api/v1/">Log out</a></li>
                    <li class="nav-item dropdown px-5">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Car Related</a>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="/cars">Cars</a></li>
                            <li><a class="dropdown-item" href="/csv-cars">Cars Graph</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown px-5">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Motorcycle Related</a>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="/motorcycle">Motorcycles</a></li>
                            <li><a class="dropdown-item" href="/csv-motorcycle">Motorcycles Graph</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h2 class="text-center">Motorcycle graph</h2>

        <div class="row">
            <div class="col-md-4">
                <label for="attributeSelector">Select Attribute:</label>
                <select id="attributeSelector" class="form-select" onchange="updateChart()">
                    <option value="selling_price">Price</option>
                    <option value="year">Year</option>
                </select>
            </div>

            <div class="col-md-8">
                <canvas id="performanceChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        // Pass the student data from the backend to the frontend
        const motorData = <%- JSON.stringify(motorData) %>;

        // Labels for each student
        const labels = motorData.map(data => data.name);

        // Function to get data for a specific attribute
        function getData(attribute) {
            return motorData.map(bike => parseFloat(bike[attribute]));
        }

        // Initial Chart Data - Displaying Hours Studied by default
        let chartData = getData('selling_price');

        // Create the chart
        const ctx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Selling price',
                    data: chartData,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        min: 2000,
                    }
                }
            }
        });

        // Update the chart based on the selected attribute
        function updateChart() {
            const selectedAttribute = document.getElementById('attributeSelector').value;
            chartData = getData(selectedAttribute);

            // Update chart data and re-render it
            performanceChart.data.datasets[0].data = chartData;
            performanceChart.data.datasets[0].label = selectedAttribute.replace('_', ' ') + ' per Motorcycle';
            performanceChart.update();
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
